<Configuration status="WARN">
    <Appenders>
        <File name="JsonFile" fileName="logs/app.json">
            <PatternLayout pattern="%msg%n" />
        </File>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="JsonFile"/>
        </Root>

        <Logger name="com.yourcompany" level="debug" additivity="false">
            <AppenderRef ref="JsonFile"/>
        </Logger>
    </Loggers>
</Configuration>
